<html lang="en-gb">
<%- include('_head') -%>
<%- include('_header') -%>
<body>
<h1>Posts</h1>
    <nav>   
        <%if (postList.next) { %>
            <a href="<%= postList.next %>">Next</a>
        <% } %>
        <%if (postList.previous) { %>
            <a href="<%= postList.previous %>">Previous</a>
        <% } %>
    </nav>
<ol>
    <% postList.results.forEach(function(post) {%>
        <li>
            <h2> <%= post.message %> </h2>
            <p>
                <img src="<%= post.imageUrl %>" width="150" alt="Image not loading">
                    Posted by: <%= post.postedBy.username %>
                            on - <%= format(post.createdAt, "yyyy-MM-dd HH:mm:ss") %>
                <p>
                    👍Likes : <%= post.likedBy.length %>     👎Dislikes: <%= post.dislikedBy.length %>
                </p>
                <form method="post" action="/posts/<%= post.id %>/like/" > <button type="submit">Like</button> </form>
            </p>
        </li>
    <% }); %>
</ol>
</body>
<%- include('_footer') -%>
</html>